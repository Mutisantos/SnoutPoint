<div class="banner">
  <div class="container">
    <div class="banner-info">
      <h3>Una Ventana Al Mundo De Las Mascotas</h3>
      <h1>BIENVENIDO A SNOUTPOINT</h1>
	    <a class="hvr-bounce-to-bottom" <%= link_to "REGISTRARSE", new_registration_path(resource_name) %></a>
    </div>
    <div class="about-section">
      <h3>Iniciar Sesión</h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <h style="color:white">Correo electrónico</h>
          <%= f.email_field :email, autofocus: true, placeholder: "alguien@example.com", class:"form-control"%>
        </div>
        <div class="form-group">
          <h style="color:white">Contraseña</h>
          <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
        </div>
        <%= f.submit "Entrar", class: "hvr-bounce-to-bottom"%>
        <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <%= f.check_box :remember_me %><h style="color:white">Recordarme</h> 
        <% end -%>
        </div>
      <% end %>
        <br><%= render "devise/shared/links" %>
    </div>
  </div>
</div>