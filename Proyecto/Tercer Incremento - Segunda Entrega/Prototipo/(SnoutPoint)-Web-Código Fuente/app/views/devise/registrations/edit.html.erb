<div id="contact" class="contact">
	<div class="container">
		<div class="contact-info">
			<h3> EDITAR CUENTA </h3>
			<p> Solo se actualizarán los campos que modifiques </p>
	 	</div>		<div class="contact-details">	
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Aún estamos esperando la confirmación de: <%= resource.unconfirmed_email %></div>
        <% end %>
        
        	
				        	<div class="row">

								      <div class="col-md-6 ">
								         <%= f.label :nombre, "Editar Nombre" %></br>
								         <%= f.text_field :nombre, autofocus: true, required: true, placeholder: "Nombre(s)"%>
	    									 <%= f.label :fechaNacimiento, "Fecha de Nacimiento" %></br>
	    	 							 	 <%= date_field("user", :fechaNacimiento, required: true, placeholder: "Fecha de nacimiento", min: Date.new(1970, 1, 1), max: Date.new(2002, 1, 1) )%>
          							 <% generos = { 'Hombre'=> 'M', 'Mujer'=> 'F'} %>
											   <%= f.label :password, "Nueva contraseña" %><i> (Deja en blanco si no deseas cambiar tu contraseña)</i></br>
										     <%= f.password_field :password, autocomplete: "off", :placeholder => "Nueva Contraseña"%></br>
											   	  
											   	  <div class="row">
											   	  	 <div class="col-md-4">
      														<%= image_tag current_user.image.url(:medium) , :class => 'img-rounded' %>
      												 </div>
      												 <div class="col-md-4">
        													<%= f.file_field :image %>
      												 </div>
											   	  </div>
								      </div>
								      <div class="col-md-6 ">
								      	<%= f.label :nombre, "Editar apellido" %></br>
	    									<%= f.text_field :apellido, required: true, placeholder: "Apellido(s)" %>
	    									<%= f.label :correo, "Editar correo" %></br>
	    									<%= f.email_field :email, required: true, placeholder: "Correo electrónico"%></br>
	    									<%= f.label :password_confirmation, "Repetir nueva contraseña" %></br>
	    									<%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Repetir nueva contraseña" %></br>
								      	<%= f.label :current_password, "Contraseña actual" %><i> (Necesitamos la contraseña actual para confirmar tus cambios)</i><br />
         							  <%= f.password_field :current_password, required: true, autocomplete: "off", placeholder: "Contraseña actual" %></br>
         							   
											   <%= f.label :genero, "Género"%></br>
											    	<% generos.each do |gen| %>
											    			<%= f.radio_button :genero, gen[1]%>
											    			<label for = "<%= gen[1] %>"><%= gen[0]%></label>
											   	  <% end %>
         							  
				 							</div>
				 				 </div></br>
        
        <div class="actions">
          <%= f.submit "GUARDAR CAMBIOS" %>
        </div>
      <% end %>
      
      <p>¿No somos lo que necesitas? <%= link_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿Seguro que deseas eliminar tu cuenta?" }, method: :delete %></p>
    </div>
  </div>
<div class="contact-bottom">
		<div class="col-md-4 contact-grid">
		  <a href="http://www.skype.com/es/"><%= image_tag("c1.png", :alt => "image") %></a>
			<h3>Soporte: +57-312-587-3689</h3><br>
		</div>
		<div class="col-md-4 contact-grid">
		  <a href="http://goo.gl/X30dCY"><%= image_tag("c2.png", :alt => "image") %></a>
			<h3>softinge@gmail.com</h3>
		</div>
		<div class="col-md-4 contact-grid">
			<a href="http://goo.gl/NLofSq"><%= image_tag("c3.png", :alt => "image") %></a>
			<h3>Pontificia Universidad Javeriana</h3>
			<h3>Colombia, Bogotá D.C.</h3>
		</div>
		<div class="clearfix"></div>
	</div>
</div>    