<div id="contact" class="contact">
	<div class="container">
		<div class="contact-details">
			<h2>¿Olvidaste tu contraseña?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          <%= f.label :email,"Correo electrónico" %><br />
          <%= f.email_field :email, autofocus: true, placeholder: "alguien@example.com", required: true %>
        </div>
        <div class="actions">
          <%= f.submit "Enviarme las instrucciones para recuperar la contraseña" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
<div class="contact-bottom">
		<div class="col-md-4 contact-grid">
		  <%= link_to (image_tag "c1.png"), root_path %>
			<h3>847-939-9359</h3>
		</div>
		<div class="col-md-4 contact-grid">
			<%= link_to (image_tag "c2.png"), root_path %>
			<h3><a href="mailto:info@example.com">sevenmail@mail.com</a></h3>
		</div>
		<div class="col-md-4 contact-grid">
		  <%= link_to (image_tag "c3.png"), root_path %>
			<h3>4116 Oak Avenue</h3>
			<h3>Chicago, IL 60607</h3>
		</div>
		<div class="clearfix"></div>
	</div>
</div>